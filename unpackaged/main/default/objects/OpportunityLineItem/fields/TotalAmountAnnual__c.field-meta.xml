<?xml version="1.0" encoding="utf-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TotalAmountAnnual__c</fullName>
    <externalId>false</externalId>
    <formula>IF(ContractLengthMonths__c&lt;=0,
  Total_Sale_Price__c,
  (Total_Sale_Price__c/ROUND(ContractLengthMonths__c,0))*12
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Annual Total Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Currency</type>
</CustomField>
